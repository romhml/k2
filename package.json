{
  "name": "k2",
  "version": "0.0.0",
  "private": true,
  "packageManager": "bun@1.0.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install && bun run --cwd node_modules/better-sqlite3 build-debug",
    "format": "prettier --write \"**/*.{ts,vue,js,md,yaml,html}\"",
    "lint": "eslint --fix .",
    "typecheck": "turbo run typecheck --log-prefix none",
    "check": "turbo run check",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "web:dev": "turbo run dev --filter @k2/web --log-prefix none",
    "drizzle": "drizzle-kit"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@k2/eslint-config": "workspace:*",
    "better-sqlite3": "^8.6.0",
    "drizzle-kit": "^0.19.13",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "node-gyp": "^9.4.0",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "turbo": "^1.10.14"
  },
  "dependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "dotenv-cli": "^7.3.0"
  }
}
