{
  "name": "k2",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{ts,vue,js,md,yaml,html}\"",
    "lint": "dotenv -- pnpm eslint --fix .",
    "typecheck": "dotenv -- turbo run --log-prefix=none typecheck",
    "check": "dotenv -- turbo run --log-prefix=none check",
    "dev": "dotenv -- turbo run dev",
    "build": "dotenv -- turbo run build",
    "web:dev": "dotenv -- pnpm --filter @k2/web dev"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@k2/eslint-config": "workspace:*",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "turbo": "^1.10.12"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "dotenv-cli": "^7.2.1"
  },
  "packageManager": "pnpm@7.29.1"
}
